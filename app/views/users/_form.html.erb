<%= form_for(@user) do |f| %>
  <%= render :partial => '/layouts/errors', :locals => {:parent => @user } %>
  <fieldset>
    <div class="clearfix">
      <%= f.label :username %>
      <div class="input">
        <%= f.text_field :username, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :email %>
      <div class="input">
        <%= f.text_field :email, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>
    </div>
    <div class="clearfix">
      <%= f.label :password %>
      <div class="input">
        <%= f.password_field :password, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %>
      <div class="input">
        <%= f.password_field :password_confirmation, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>  
    </div>
    <div class="actions">
      <%= f.submit  :class => 'btn info' %>
      <%= link_to 'Cancel', "#", :class => 'btn' %>
    </div>
  </fieldset>  
<% end %>
