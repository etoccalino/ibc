<%= form_tag user_sessions_path, :method => :post do %>
  <fieldset>
    <div class="clearfix">
      <%= label_tag :email %>
      <div class="input">
        <%= text_field_tag :email,nil, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>
    </div>
    <div class="clearfix">
      <%= label_tag :password %>
      <div class="input">
        <%= password_field_tag :password,nil, :class => 'span5' %>
        <span class="help-block"> email </span>
      </div>
    </div>
  	<div class="input input-prepend clearfix">  
      <div class="add-on"><%= check_box_tag :remember %></div>
      <label class="prependedLabel" style="font-size: 12px"> keep me logged in </label>
    </div>
    <div class="actions">
      <%= submit_tag "Login", :class => 'btn' %>
    </div>
  </fieldset>  
<% end %>


